@model Identity101.ViewModels.ChangePasswordViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang ="tr">
<head>
    <title>Şifre Değiştir</title>
</head>
<body>
    <div>
        <h2>@TempData["Message"]</h2>
    <form asp-controller="Account" asp-action="ChangePassword">
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword"/>
        <span asp-validation-for="OldPassword"></span><br/>
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword"/>
        <span asp-validation-for="NewPassword"></span><br/>
        <label asp-for="ConfirmNewPassword"></label>
        <input asp-for="ConfirmNewPassword"/>
        <span asp-validation-for="ConfirmNewPassword"></span><br/>
        <input type="submit" value="Değiştir"/>
    </form>
    </div>
</body>
</html>