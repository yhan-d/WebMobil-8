@model Identity101.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html lang ="tr">
<head>
    <meta charset ="utf-8" />
    <meta http-equiv = "X-UA-Compatible" content = "IE=edge" />
    <meta name ="viewport" content ="width=device-width, initial-scale=1.0" />
    <title>Register</title>
</head>
<body>
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName"/>
        <span asp-validation-for="UserName"></span><br>
        <label asp-for="Email"></label>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span><br>
        <label asp-for="Password"></label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span><br>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"/>
        <span asp-validation-for="ConfirmPassword"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Surname"></label>
        <input asp-for="Surname"/>
        <span asp-validation-for="Surname"></span><br>
        <input type  ="submit" value ="Kayıt Ol" />
    </form>
</body>
</html>
